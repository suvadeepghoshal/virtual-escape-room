// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  puzzles     Puzzle[]
}

model Puzzle {
  id     Int    @id @default(autoincrement())
  name   String
  clue   String
  answer String
  roomId Int
  room   Room   @relation(fields: [roomId], references: [id])
}
